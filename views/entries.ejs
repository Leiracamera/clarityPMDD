<h1>All Entries</h1>
<ul>
    <% entries.forEach(entry => { %>
        <li>
            <strong>Date:</strong> <%= entry.date %>
            <button onclick="toggleEditForm('date-form-<%= entry.entry_id %>')">Edit</button>
            <form id="date-form-<%= entry.entry_id %>" action="/edit/<%= entry.entry_id %>" method="POST" style="display: none;">
                <input type="date" name="date" value="<%= entry.date %>">
                <button type="submit">Save</button>
            </form>
            <br>
            
            <strong>Mood:</strong> <%= entry.mood %><br>
            <button onclick="toggleEditForm('mood-form-<%= entry.entry_id %>')">Edit</button>
            <form id="mood-form-<%= entry.entry_id %>" action="/edit/<%= entry.entry_id %>" method="POST" style="display: none;">
                <input type="text" name="mood" value="<%= entry.mood %>">
                <button type="submit">Save</button>
            </form>
            <br>

            <strong>Symptoms:</strong> <%= entry.symptoms %><br>
            <button onclick="toggleEditForm('symptoms-form-<%= entry.entry_id %>')">Edit</button>
            <form id="symptoms-form-<%= entry.entry_id %>" action="/edit/<%= entry.entry_id %>" method="POST" style="display: none;">
                <input type="text" name="symptoms" value="<%= entry.symptoms %>">
                <button type="submit">Save</button>
            </form>
            <br>


            <strong>Energy Level:</strong> <%= entry.energy_level %><br>
            <button onclick="toggleEditForm('energy_level-form-<%= entry.entry_id %>')">Edit</button>
            <form id="energy_level-form-<%= entry.entry_id %>" action="/edit/<%= entry.entry_id %>" method="POST" style="display: none;">
                <input type="text" name="energy_level" value="<%= entry.energy_level %>">
                <button type="submit">Save</button>
            </form>
            <br>

            <strong>Sleep Quality:</strong> <%= entry.sleep_quality %><br>
            <button onclick="toggleEditForm('sleep_quality-form-<%= entry.entry_id %>')">Edit</button>
            <form id="sleep_quality-form-<%= entry.entry_id %>" action="/edit/<%= entry.entry_id %>" method="POST" style="display: none;">
                <input type="text" name="sleep_quality" value="<%= entry.sleep_quality %>">
                <button type="submit">Save</button>
            </form>
            <br>

            <strong>Notes:</strong> <%= entry.notes %>
            <button onclick="toggleEditForm('notes-form-<%= entry.entry_id %>')">Edit</button>
            <form id="notes-form-<%= entry.entry_id %>" action="/edit/<%= entry.entry_id %>" method="POST" style="display: none;">
                <input type="text" name="notes" value="<%= entry.notes %>">
                <button type="submit">Save</button>
            </form>
            <br>


            <form action="/delete/<%= entry.entry_id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this entry?');">Delete</button>
            </form>

        </li>
    <% }) %>
</ul>

<script>
    function toggleEditForm(formId) {
        const form = document.getElementById(formId);
        form.style.display = form.style.display === 'none' ? 'block' : 'none';
    }
</script>